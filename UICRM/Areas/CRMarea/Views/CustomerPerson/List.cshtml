
@model List<DAL.ORM.Entity.CustomerPerson>

@{
    ViewBag.Title = "List";
}

<h2>Personeller</h2>



<div>
    <hr />

    @*<a href="@Url.Action("List","Product",new { id=Model.ID})" class="btn btn-primary"><i class="glyphicon glyphicon-backward"></i></a>*@






    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Müşteri</th>
                <th>Adı</th>
                <th>Soyadı</th>
                <th>Eposta</th>
                <th>Telefon</th>
                <th>GSM</th>
                <th>Görevi</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Customer.Name</td>
                    <td>@item.Name</td>
                    <td>@item.SurName</td>
                    <td>@item.Email</td>
                    <td>@item.Phone</td>
                    <td>@item.MobilePhone</td>
                    <td>@item.Title</td>
                    <td><a href="@Url.Action("Details","Customer",new { id = item.CustomerID })" class="btn btn-primary"><i class="glyphicon glyphicon-backward"></i></a></td>
                    <td>
                        <a href="@Url.Action("Edit","CustomerPerson",new { id=item.ID})" class="btn btn-primary"><i class="glyphicon glyphicon-edit"></i></a>

                       
                    </td>
                    <td>
                        <a href="@Url.Action("Del","CustomerPerson",new { id=item.ID})" class="btn btn-danger"><i class="glyphicon glyphicon-remove"></i></a>
                    </td>
                </tr>

            }


        </tbody>
    </table>

</div>


