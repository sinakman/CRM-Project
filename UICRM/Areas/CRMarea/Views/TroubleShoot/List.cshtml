@model IEnumerable<DAL.ORM.Entity.TroubleShoot>
@{
    ViewBag.Title = "List";
}

<h2>Tüm Destekler</h2>

<div class="col-lg-12">
    <section class="panel">
        <header class="panel-heading">
            Destekler
        </header>
        <div class="btn-group">
            <a href="/CRMarea/TroubleShoot/Add" class="btn btn-primary">Ekle</a>
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Müşteri Adı</th>
                    <th>Ürün</th>
                    <th>Bitiş Tarihi</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Customer.Name</td>
                        <td>@item.Product.Name</td>
                        <td>@item.EndDate</td>
                        <td>
                            @*<a href="@Url.Action("Edit","TroubleShoot",new { id=item.ID})" class="btn btn-primary"><i class="glyphicon glyphicon-edit"></i></a>*@

                            <a href="@Url.Action("Del","TroubleShoot",new { id=item.ID})" class="btn btn-danger"><i class="glyphicon glyphicon-remove"></i></a>
                        </td>
                        
                    </tr>
                }
            </tbody>
        </table>
    </section>
</div>