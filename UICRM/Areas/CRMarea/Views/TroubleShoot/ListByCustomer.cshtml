@model List<DAL.ORM.Entity.TroubleShoot>
@{
    ViewBag.Title = "ListByCustomer";
}

<h2>Verilen Destek</h2>



<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                

            </div>
            <div class="body">
                <div class="table-responsive">
                    <div class="btn-group">

                        <a type="button" class="btn btn-success" tabindex="0" aria-controls="DataTables_Table_1" href="/CRMarea/Customer/ExportToExcel">
                            <span>Excel</span>
                        </a>
                        <a type="button" class="btn btn-danger" tabindex="0" aria-controls="DataTables_Table_1" href="#">
                            <span>PDF</span>
                        </a>
                        <a type="button" class="btn btn-info" tabindex="0" aria-controls="DataTables_Table_1" href="#">
                            <span>Print</span>
                        </a>
                    </div>
                    <br /><br />
                    <table class="table table-bordered table-striped table-hover dataTable js-exportable">
                        <thead>
                            <tr>

                                <th>Müşteri</th>
                                <th>Ürün</th>
                                <th>Bitiş Tarihi</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@item.Customer.Name</td>
                                <td>@item.Product.Name</td>
                                <td>@item.EndDate</td>
                                <td>
                                    @*<a href="@Url.Action("Edit","TroubleShoot",new { id=item.ID})" class="btn btn-primary"><i class="glyphicon glyphicon-edit"></i></a>*@

                                    <a href="@Url.Action("Del","TroubleShoot",new { id=item.ID})" class="btn btn-danger"><i class="glyphicon glyphicon-remove"></i></a>

                                </td>
                                
                            </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>