@model List<DAL.ORM.Entity.Employee>
@{
    ViewBag.Title = "List";
}

<h2>List</h2>

<div class="col-lg-12">
    <section class="panel">
        <header class="panel-heading">
            Kişiler
        </header>
        <div class="btn-group">
            <a href="#" class="btn green">Ekle</a>
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Adı</th>
                    <th>Soyadı</th>
                    <th>E-posta</th>
                    <th>Tel</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Surname</td>
                        <td>@item.Email</td>
                        <td>@item.Phone</td>
                        <td>
                            <a href="@Url.Action("Edit","Employee",new { id=item.ID})" class="btn btn-primary">Düzenle<i class="icon-pencil"></i></a>

                            <a href="@Url.Action("",new { id=item.ID})" class="btn btn-danger"><i class="icon-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </section>
</div>


