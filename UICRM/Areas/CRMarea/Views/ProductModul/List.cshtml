@model List<DAL.ORM.Entity.ProductModule>

@{
    ViewBag.Title = "Details";
}

<h2>Modül Detayı</h2>

<div>
    <hr />

    





    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Ürün Adı</th>
                <th>Modül Adı</th>
                <th>Yayın Tarihi</th>
                <th>Açıklama</th>
                <th>Ürün Detayına Dön</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Name</td>
                <td>@item.ReleaseDate</td>
                <td>@item.Description</td>
                <td>
                    <a href="@Url.Action("Details","Product",new { id = item.ProductID })" class="btn btn-primary"><i class="glyphicon glyphicon-backward"></i></a>
                </td>
                <td>
                    <a href="@Url.Action("Del","ProductModul",new { id=item.ID})" class="btn btn-danger"><i class="glyphicon glyphicon-remove"></i></a>
                </td>

            </tr>

            }


        </tbody>
    </table>

</div>


