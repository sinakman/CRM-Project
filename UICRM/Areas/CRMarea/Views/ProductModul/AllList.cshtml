@model List<DAL.ORM.Entity.ProductModule>

@{
    ViewBag.Title = "AllList";
}

<h2>Tüm Modüller</h2>

<div>
    <h4>Modüller</h4>
    <hr />

    @*<a href="@Url.Action("Details","Product",new {  id=Model.Select(x=>x.ProductID)})" class="btn btn-primary"><i class="glyphicon glyphicon-backward"></i></a>*@






    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Ürün Adı</th>
                <th>Modül Adı</th>
                <th>Yayın Tarihi</th>
                <th>Açıklama</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Name</td>
                    <td>@item.ReleaseDate</td>
                    <td>@item.Description</td>
                    <td>

                        <a href="@Url.Action("Del","ProductModul",new { id=item.ID})" class="btn btn-danger"><i class="glyphicon glyphicon-remove"></i></a>
                    </td>
                </tr>

            }


        </tbody>
    </table>

</div>
