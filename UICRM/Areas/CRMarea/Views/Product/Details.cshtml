@model DAL.ORM.Entity.Product

@{
    ViewBag.Title = "Details";
}

<h2>Ürün Detayı</h2>

<div class="col-lg-12">
    <section class="panel">
        <header class="panel-heading">
            Detay
        </header>

        <a href="@Url.Action("List","Product",new { id=Model.ID})" class="btn btn-primary"><i class="glyphicon glyphicon-backward"></i></a>
        <div class="container">
            <div class="btn-group">

                
                <a type="button" class="btn btn-danger" tabindex="0" aria-controls="DataTables_Table_1" href="/CRMarea/Product/ExPdfDetail">
                    <span>PDF</span>
                </a>
                
            </div>
            <dl class="dl-horizontal">
                <dt>
                    Ürün Kodu:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ProductNumber)
                </dd>

                <dt>
                    Adı:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt>
                    Açıklama:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>

                <dt>
                    Yayın Tarihi:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ReleaseDate)
                </dd>



                <dt>
                    Kayıt Tarihi:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CreateDate)
                </dd>

                <dt>
                    Kayıt Eden:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CreatedUserName)
                </dd>

                <dt>
                    Kayıt Edilen PC:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CreatedCompName)
                </dd>

                <dt>
                    Güncellendiği Tarih:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.UpdateDate)
                </dd>

                <dt>
                    Güncelleyen:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.UpdatedUserName)
                </dd>

                <dt>
                    Güncellendiği PC:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.UpdateCompnName)
                </dd>



            </dl>



        </div>
    </section>
</div>





<a href="@Url.Action("Edit","Product",new { id=Model.ID})" class="btn btn-primary"><i class="glyphicon glyphicon-edit"></i></a>

<a href="@Url.Action("Del","Product",new { id=Model.ID})" class="btn btn-danger"><i class="glyphicon glyphicon-remove"></i></a>

<a href="@Url.Action("List","ProductModul",new { id=Model.ID})" class="btn btn-primary">Modülleri Gör<i class="glyphicon glyphicon-edit"></i></a>

<a href="@Url.Action("Add","ProductModul",new { id=Model.ID})" class="btn btn-primary">Modül Ekle <i class="glyphicon glyphicon-edit"></i></a>