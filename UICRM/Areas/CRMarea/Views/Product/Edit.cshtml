
@{
    ViewBag.Title = "Edit";
}
@using UICRM.Areas.CRMarea.Models
@model ProductDTO
<h2>Ürünü Düzenle</h2>


<form action="/CRMarea/Product/Edit" method="post">
    <div class="form-group">
        <label for="ProductNumber">Ürün Kodu</label>
        <input type="number" name="ProductNumber" value="@Model.ProductNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Name">Adı</label>
        <input type="text" name="Name" value="@Model.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Description">Açıklama</label>
        <input type="text" name="Description" value="@Model.Description" class="form-control" />
    </div>
    <div class="form-group">
        <label for="ReleaseDate">Yayın Tarihi</label>
        <input type="date" name="ReleaseDate" value="@Model.ReleaseDate" class="form-control" />
    </div>
    

    <input style="visibility:hidden" type="text" name="Id" value="@Model.Id" />
    <input type="submit" value="Güncelle" class="form-control btn btn-primary" />
</form>
