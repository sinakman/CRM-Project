
@{
    ViewBag.Title = "Add";
}

<h2>Ürün Ekle</h2>


<form action="/CRMarea/Product/Add" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="ProductNumber">Ürün No</label>
        <input type="number" name="ProductNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Name">Adı</label>
        <input type="text" name="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Description">Açıklama</label>
        <input type="text" name="Description" class="form-control" />
    </div>
    <div class="form-group">
        <label for="ReleaseDate">Yayın Tarihi</label>
        <input type="date" name="ReleaseDate" class="form-control" />
    </div>
    
    
    <input type="submit" value="Ekle" class="form-control btn btn-primary" />
</form>