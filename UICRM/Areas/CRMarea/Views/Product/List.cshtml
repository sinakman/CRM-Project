@model List<DAL.ORM.Entity.Product>
@{
    ViewBag.Title = "List";
}

<h2>Ürün Listesi</h2>
<div class="col-lg-12">
    <section class="panel">
        <header class="panel-heading">
            Ürünler <br /> <div class="btn-group">
    <a href="/CRMarea/Product/Add" class="btn btn-primary">Ekle</a>
</div>
        </header>
        
        <div class="btn-group">

            <a type="button" class="btn btn-success" tabindex="0" aria-controls="DataTables_Table_1" href="/CRMarea/Product/ExportToExcel">
                <span>Excel</span>
            </a>
            <a type="button" class="btn btn-danger" tabindex="0" aria-controls="DataTables_Table_1" href="/CRMarea/Product/ExPdf">
                <span>PDF</span>
            </a>
            
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Kodu</th>
                    <th>Adı</th>
                    <th>Yayın Tarihi</th>
                    <th>Detaylar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ProductNumber</td>
                        <td>@item.Name</td>
                        <td>@item.ReleaseDate</td>
                        <td>
                            <a href="@Url.Action("Details","Product",new { id=item.ID})" class="btn btn-primary"><i class="glyphicon glyphicon-info-sign"></i></a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </section>
</div>