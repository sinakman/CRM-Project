
@{
    ViewBag.Title = "Add";
}

<h2>Yeni Müşteri Ekle</h2>


<form action="/CRMarea/Customer/Add" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Name">Adı</label>
        <input type="text" name="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Address">Adres</label>
        <input type="text" name="Address" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Phone">Tel</label>
        <input type="text" name="Phone" class="form-control" />
    </div>
    <div class="form-group">
        <label for="DBType">DB</label>
        <input type="text" name="DBType" class="form-control" />
    </div>
    <div class="form-group">
        <label for="AppServer">Server</label>
        <input type="text" name="AppServer" class="form-control" />
    </div>    
    <input type="submit" value="Ekle" class="form-control btn btn-primary" />
</form>